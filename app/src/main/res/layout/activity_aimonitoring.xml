<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- AI Confidence Meter -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.shakti.ai.ui.views.AIConfidenceMeterView
                        android:id="@+id/confidenceMeter"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />

                    <TextView
                        android:id="@+id/tvLastCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last check: 0s ago"
                        android:textSize="12sp"
                        android:textColor="@color/text_light"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Audio Waveform Visualizer -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¤ Audio Analysis"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <com.shakti.ai.ui.views.AudioVisualizerView
                        android:id="@+id/audioVisualizer"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Real-time waveform visualization"
                        android:textSize="12sp"
                        android:textColor="@color/text_light"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Voice Command Control -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ—£ï¸ Voice Commands"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchVoiceCommand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvVoiceCommandStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voice commands disabled"
                        android:textSize="14sp"
                        android:textColor="@color/text_light"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Say &quot;HELP&quot; 3 times within 8 seconds to trigger emergency"
                        android:textSize="12sp"
                        android:textColor="@color/text_light"
                        android:layout_marginTop="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTestVoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Voice Command"
                        android:layout_marginTop="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- AI Statistics -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š AI Statistics"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_marginTop="12dp">

                        <!-- Total Samples -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvTotalSamples"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.2M"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Samples Analyzed"
                                android:textSize="12sp"
                                android:textColor="@color/text_light" />

                        </LinearLayout>

                        <!-- Threats Detected -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvThreatsDetected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/error" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Threats Detected"
                                android:textSize="12sp"
                                android:textColor="@color/text_light" />

                        </LinearLayout>

                        <!-- Accuracy -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvAccuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="87%"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/success" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Detection Accuracy"
                                android:textSize="12sp"
                                android:textColor="@color/text_light" />

                        </LinearLayout>

                        <!-- Avg Confidence -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tvAvgConfidence"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="65%"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/info" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Confidence"
                                android:textSize="12sp"
                                android:textColor="@color/text_light" />

                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Model Information -->
            <com.google.android.material.card.MaterialCardView
                style="@style/CardStyle"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¤– ML Model Info"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Model:"
                            android:textSize="14sp"
                            android:textColor="@color/text_light" />

                        <TextView
                            android:id="@+id/tvModelVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YAMNet v1.0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Last Updated:"
                            android:textSize="14sp"
                            android:textColor="@color/text_light" />

                        <TextView
                            android:id="@+id/tvLastUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18 Nov 2025"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Detection Log -->
            <com.google.android.material.card.MaterialCardView style="@style/CardStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Detection Log"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last 50 detections"
                        android:textSize="12sp"
                        android:textColor="@color/text_light"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvEmptyState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No detections yet. Start monitoring to see AI activity."
                        android:textSize="14sp"
                        android:textColor="@color/text_light"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDetectionLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
