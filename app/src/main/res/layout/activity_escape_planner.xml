<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial Planning"
                style="@style/TextTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate your financial needs for safe escape"
                style="@style/TextSubtitle" />

            <!-- Has Children Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchHasChildren"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I have children"
                android:layout_marginTop="16dp" />

            <!-- Children Count -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/TextInputStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etChildrenCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number of children"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Needs Legal Help Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNeedsLegalHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I need legal assistance"
                android:checked="true"
                android:layout_marginTop="16dp" />

            <!-- Timeframe Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planning Timeframe"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinnerTimeframe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="@drawable/indicator_inactive" />

            <!-- Calculate Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalculate"
                style="@style/Button.Primary"
                android:layout_marginTop="24dp"
                android:text="Calculate Financial Plan" />

            <!-- Results Layout -->
            <LinearLayout
                android:id="@+id/layoutResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <!-- Total Amount Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/CardStyle"
                    app:cardBackgroundColor="@color/bg_1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount Required"
                            android:textSize="16sp"
                            android:textColor="@color/text_light" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹90,000"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Breakdown Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/CardStyle"
                    app:cardBackgroundColor="@color/bg_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Financial Breakdown"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:id="@+id/tvBreakdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            style="@style/TextBody"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Funding Sources Card -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/CardStyle"
                    app:cardBackgroundColor="@color/bg_3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Funding Sources"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:id="@+id/tvFundingSources"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            style="@style/TextBody"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Safe Houses Info -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/CardStyle"
                    app:cardBackgroundColor="@color/bg_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ  Nearby Safe Houses"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:id="@+id/tvSafeHouseCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 safe houses nearby"
                            style="@style/TextBody"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewTimeline"
                        style="@style/Button.Secondary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="View Timeline" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFindSafeHouses"
                        style="@style/Button.Primary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Safe Houses" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>